<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.marks.edms.dao.UserDao">
    <resultMap id="userMap" type="com.marks.edms.domain.SysUser">
        <id property="user_id" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="PASSWORD"/>
        <collection property="roles" ofType="com.marks.edms.domain.SysRole">
            <result column="role_name" property="role_name"/>
        </collection>

    </resultMap>
    <select id="findByUserName" parameterType="String" resultMap="userMap">
        select u.*
        ,r.role_name
        from marks_user u
        LEFT JOIN marks_role_user sru on u.user_id= sru.user_id
        LEFT JOIN marks_role r on sru.role_id=r.role_id
        where username= #{username}
    </select>
</mapper>